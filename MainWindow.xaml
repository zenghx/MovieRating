                            <Canvas Width="24" Height="24" >
                                <Path x:Name="pth" Data="{Binding state, Converter={StaticResource mrc}}" Fill="White" />
                            </Canvas>
                        </Viewbox>
                    </Button>
                    <Button x:Name="closeW"  Style="{StaticResource close_button}" Click="Window_Click" Width="40">
